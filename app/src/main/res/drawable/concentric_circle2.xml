<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/colorWhite"/>
            <padding
                android:bottom="30dp"
                android:left="30dp"
                android:right="30dp"
                android:top="30dp"/>
            <stroke
                android:width="8dp"
                android:color="@color/colorOrange"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/colorOrange"/>

            <size
                android:width="300dp"
                android:height="300dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorOrange"/>
        </shape>

    </item>
</layer-list>